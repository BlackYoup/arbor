export_exlib_phases src_compile src_install

DEPENDENCIES="
    build:
        sys-devel/boost-jam
"

ejam() {
    illegal_in_global_scope

    echo "jam ${@}"
    jam "${@}" || die_unless_nonfatal "jam returned exit status: $?"
}

jam_src_compile() {
    ejam -d+2 -j${EXJOBS:-1}
}

jam_src_install() {
    DESTDIR="${IMAGE}" ejam install
}

