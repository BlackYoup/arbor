myexparam alpha=
myexparam suffix=bz2

myexparam pn=${MY_PN:-${PN}}
myexparam pv=${MY_PV:-${PV}}
myexparam pnv=${MY_PNV:-$(exparam pn)-$(exparam pv)}

HOMEPAGE="http://www.gnu.org/software/${MY_PN:-${PN}}/"
if [[ -n $(exparam alpha) ]]; then
    DOWNLOADS="ftp://alpha.gnu.org/pub/gnu/"
else
    DOWNLOADS="mirror://gnu/"
fi
DOWNLOADS+="$(exparam pn)/$(exparam pnv).tar.$(exparam suffix)"

UPSTREAM_DOCUMENTATION="
http://www.gnu.org/software/$(exparam pn)/manual/$(exparam pn).html   [[ lang = en description = [ $(exparam pn) manual, HTML ] ]]
http://www.gnu.org/software/$(exparam pn)/manual/$(exparam pn).pdf    [[ lang = en description = [ $(exparam pn) manual, PDF  ] ]]
"

if has $(exparam suffix) lzma xz; then
    DEPENDENCIES+="
        build:
            app-arch/xz"
fi

