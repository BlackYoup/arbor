require waf [ waf_executable="python2 $(ever is_scm && echo '../../' || echo './')buildtools/bin/waf" ]
require python [ blacklist='3' multibuild=false ]

export_exlib_phases src_configure

DEPENDENCIES="
    build:
        app-text/docbook-xml-dtd:4.2
        app-text/docbook-xsl-stylesheets
        dev-libs/libxslt
"

# You should add items to
# WAF_SRC_CONFIGURE_PARAMS using +=
WAF_SRC_CONFIGURE_PARAMS=(
    --bundled-libraries=NONE
    --mandir=/usr/share/man
    --infodir=/usr/share/info
    --docdir=/usr/share/doc/${PNVR}
    --localstatedir=/var
    --sysconfdir=/etc
    --disable-dependency-tracking
    --disable-rpath
    --disable-rpath-install
)

wafsamba_src_configure() {
    export PYTHONARCHDIR="$(python_get_sitedir)"
    waf_src_configure
}
