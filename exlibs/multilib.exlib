require multibuild

get_libdir() {
    ewarn "get_libdir is deprecated"
    echo "${LIBDIR}"
}

get_all_libdirs() {
    ewarn "get_all_libdirs is deprecated"

    local target libdir
    for target in ${MULTIBUILD_C_TARGETS} ; do
        # libdir is a locked var, no need to use get_build_var
        libdir=MULTIBUILD_C_${target}_PROFILE_LIBDIR
        echo ${!libdir}
    done
}

