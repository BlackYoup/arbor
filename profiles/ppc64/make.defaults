ACCEPT_PLATFORMS="ppc64"

MULTIBUILD_C_TARGETS="64"
MULTIBUILD_C_DEFAULT_TARGET="64"

# these are forced by the profile
MULTIBUILD_C_64_PROFILE_CHOST="powerpc64-unknown-linux-gnu"
MULTIBUILD_C_64_PROFILE_CBUILD=${MULTIBUILD_C_64_PROFILE_CHOST}
MULTIBUILD_C_64_PROFILE_LIBDIR="lib64"
MULTIBUILD_C_64_PROFILE_PKG_CONFIG_PATH="/usr/${MULTIBUILD_C_64_PROFILE_LIBDIR}/pkgconfig/:/usr/share/pkgconfig"

MULTIBUILD_C_64_PREPEND_PATH=""

CHOST=${MULTIBUILD_C_64_PROFILE_CHOST}
CBUILD=${MULTIBUILD_C_64_PROFILE_CBUILD}
LIBDIR=${MULTIBUILD_C_64_PROFILE_LIBDIR}
PKG_CONFIG_PATH=${MULTIBUILD_C_64_PROFILE_PKG_CONFIG_PATH}

AR=${CHOST}-ar
AS=${CHOST}-as
CC=${CHOST}-gcc
CPP=cpp
CXX=${CHOST}-g++
FORTRAN=${CHOST}-gfortran
LD=${CHOST}-ld
NM=${CHOST}-nm
RANLIB=${CHOST}-ranlib

MULTIBUILD_C_64_PROFILE_CFLAGS=""
MULTIBUILD_C_64_PROFILE_CPPFLAGS=""
MULTIBUILD_C_64_PROFILE_CXXFLAGS=""
MULTIBUILD_C_64_PROFILE_LDFLAGS=""

# these variables may be overridden by the user

CFLAGS="-O2 -pipe"
CXXFLAGS="-O2 -pipe"

