REMOTE_IDS="freshmeat:${PN}"
DOWNLOADS="ftp://ftp.exim.org/pub/${PN}/${PN}${PV%.*}/${PNV}.tar.bz2
    ftp://ftp.exim.org/pub/${PN}/${PN}${PV%.*}/${PN}-texinfo-${PV}.tar.bz2
    http://dev.exherbo.org/~ingmar/distfiles/${PN}/${PNV}-internal-pcre.patch.bz2
