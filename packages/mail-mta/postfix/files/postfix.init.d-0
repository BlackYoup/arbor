opts="reload"
depend() {
    [[ -n "$(grep -v '^#' /etc/postfix/master.cf  |egrep '\binet\b')" ]] && need net
}

start() {
    ebegin "Starting postfix"
    postfix start
    eend $?
}

stop() {
    ebegin "Stopping postfix"
    postfix stop
    eend $?
}

reload() {
    ebegin "Reloading postfix"
    postfix reload
    eend $?
}

