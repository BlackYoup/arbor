require multilib

SUMMARY="Compatibility package for running binaries linked against a pre gcc 3.4 libstdc++"
HOMEPAGE="http://gcc.gnu.org/${PN}/"
DOWNLOADS="mirror://gnu/gcc/gcc-${PV}/gcc-${PV}.tar.bz2"

LICENCES="GPL-2 LGPL-2.1"
SLOT="5"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

RESTRICT="test"

DEPENDENCIES="
    test-expensive:
        dev-tcl/expect
"

WORK="${WORKBASE}/build"
ECONF_SOURCE="${WORKBASE}/gcc-${PV}"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --disable-multilib
    --enable-languages=c++
    --hates=docdir
    --with-system-zlib
)

src_unpack() {
    default
    edo mkdir "${WORK}"
}

src_configure() {
    local multibuild_c_target

    for multibuild_c_target in ${MULTIBUILD_C_TARGETS} ; do
        multibuild_switch_build_target C ${multibuild_c_target}

        mkdir "${WORK}/${multibuild_c_target}" || die "mkdir ${multibuild_c_target} failed"
        cd "${WORK}/${multibuild_c_target}" || die "entering ${multibuild_c_target} failed"

        default
    done
}

src_compile() {
    local multibuild_c_target

    for multibuild_c_target in ${MULTIBUILD_C_TARGETS} ; do
        multibuild_switch_build_target C ${multibuild_c_target}

        cd "${WORK}/${multibuild_c_target}" || die "entering ${multibuild_c_target} failed"

        default
    done
}

src_test_expensive() {
    emake check
}

src_install() {
    local multibuild_c_target

    for multibuild_c_target in ${MULTIBUILD_C_TARGETS} ; do
        multibuild_switch_build_target C ${multibuild_c_target}

        cd "${WORK}/${multibuild_c_target}" || die "entering ${multibuild_c_target} failed"

        emake DESTDIR="${IMAGE}" install-target-libstdc++-v3
    done

    # We only care about the shared library
    edo pushd "${IMAGE}"
    edo rm -rf usr/[^l]*
    edo rm -rf usr/lib*/*.{a,la,so}
    edo popd
}

