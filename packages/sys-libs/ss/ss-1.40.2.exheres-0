SUMMARY="Generic Subsystem library (Simple tty UI)"
HOMEPAGE="http://e2fsprogs.sourceforge.net"
SRC_URI="mirror://sourceforge/e2fsprogs/e2fsprogs-${PV}.tar.gz"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
build+run:
    sys-libs/com_err"

S="${WORKDIR}/e2fsprogs-${PV}"

src_compile() {
    cd "${S}"
    mkdir build
    cd build
    ../configure --enable-elf-shlibs || die "configure failed"
    emake COMPILE_ET=compile_et -C lib/ss
}

src_install() {
    cd "${S}/build"
    dodir /usr/share/man/man1
    emake -C lib/ss DESTDIR="${D}" install
    cd "${S}"
    dodoc README RELEASE-NOTES SUBMITTING-PATCHES
}
