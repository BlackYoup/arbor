require flag-o-matic

# TODO(compnerd) work out-of-tree builds
require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.13 ] ] multiarch [ in_tree_build=true ]

SUMMARY="A free compression library unencumbered by patents"
HOMEPAGE="http://www.zlib.net"
DOWNLOADS="${HOMEPAGE}/${PNV}.tar.bz2"

LICENCES="ZLIB"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS="
hosts:
    arm-exherbo-linux-gnueabi
    i686-pc-linux-gnu
    x86_64-pc-linux-gnu
"

DEPENDENCIES="
    build+run:
        !dev-libs/minizip [[
            description = [ Included and enabled in zlib >= 1.2.7-r1 ]
            resolution = uninstall-blocked-after
        ]]
"

DEFAULT_SRC_INSTALL_PARAMS=( LDCONFIG=: )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( algorithm.txt )

WORK="${WORKBASE}"

post_multiarch_prepare() {
    edo pushd contrib/minizip
    eautoreconf
    edo popd
}

perform_multiarch_configure() {
    local host_cflags_var=${host//-/_}_CFLAGS

    append-flags -fPIC

    # NOTE(compnerd) zlib does not support the usual configure arguments
    # TODO(compnerd) figure out how to deal with clang
    edo env                                     \
        AR=${host}-ar                           \
        CC=${host}-gcc                          \
        NM=${host}-nm                           \
        RANLIB=${host}-ranlib                   \
        CFLAGS=${!host_cflags_var}              \
        mandir=/usr/share/man                   \
    "${PWD}/configure"                          \
            --prefix=/usr/${host}               \
            --libdir=/usr/${host}/lib           \
            --includedir=/usr/${host}/include   \
            --shared

    edo pushd contrib/minizip
    default_multiarch_src_configure --disable-static
    edo popd
}

post_multiarch_install() {
    edo pushd contrib/minizip
    default
    edo popd
}

