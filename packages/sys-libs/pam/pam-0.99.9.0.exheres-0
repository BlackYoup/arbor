MY_P="Linux-PAM-${PV}"
S="${WORKDIR}/${MY_P}"

DESCRIPTION="Linux-PAM provides Pluggable Authentication Modules"
HOMEPAGE="http://www.kernel.org/pub/linux/libs/pam"
SRC_URI="http://www.kernel.org/pub/linux/libs/pam/pre/library/${MY_P}.tar.bz2"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="nls"

DEPEND=""
RDEPEND=""

# Tests requires /etc/pam.d/other to be installed
RESTRICT="test"

src_configure() {
    econf $(option_enable nls) || die "Configure failed."
}

src_install() {
    emake DESTDIR="${D}" install || die "Install failed."
    dodoc ABOUT-NLS AUTHORS CHANGELOG ChangeLog Copyright INSTALL NEWS README
}
