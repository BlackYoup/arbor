require glibc [ source_uri="mirror://gnu/${PN}/${PNV}.tar.xz" libidn_uri= \
                ports_uri="http://dev.exherbo.org/~ingmar/distfiles/${PN}/${PN}-ports-${PV}.tar.xz" ]

PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"

# Sandbox causes numerous test failures
RESTRICT=test

DEPENDENCIES="
    build:
        app-arch/xz
"

src_prepare() {
    cd "${WORKBASE}/${PNV}"
    expatch -p0 "${FILES}/${PN}-2.10.1-disable-tst-cpuclock2.patch"
    expatch -p0 "${FILES}/${PN}-2.10.1-disable-tst-atime.patch"
    expatch -p0 "${FILES}/${PN}-2.10.1-disable-tst-mutex5.patch"

    glibc_src_prepare
}

