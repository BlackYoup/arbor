require gnu

SUMMARY="GRUB (Grand Unified Boot) bootlader (precompiled version for amd64)"
DOWNLOADS="mirror://gentoo/${PNV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES=""

WORK=${WORKBASE}
GRUB_PNV="grub-0.97-r3"

src_install() {
    cp -a "${WORKBASE}"/* "${IMAGE}"
    mv "${IMAGE}"/usr/share/doc/{${GRUB_PNV},${PNV}}
}

