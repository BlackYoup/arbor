SUMMARY="Popular system logger"
HOMEPAGE="http://www.balabit.com/network-security/syslog-ng/"
SRC_URI="http://www.balabit.com/downloads/files/${PN}/sources/stable/src/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="ipv6 tcp-wrappers"

DEPENDENCIES="
    dev-libs/glib
    sys-apps/eventlog"

DEFAULT_SRC_CONFIGURE_PARAMS=( --enable-dynamic-linking )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( ipv6 tcp-wrappers )

src_install() {
    emake DESTDIR="${D}" install
    dodoc ChangeLog NEWS README VERSION
}
