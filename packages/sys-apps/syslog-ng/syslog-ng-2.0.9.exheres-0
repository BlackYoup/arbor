require versionator

SUMMARY="Popular system logger"
HOMEPAGE="http://www.balabit.com/network-security/syslog-ng/"
DOWNLOADS="http://www.balabit.com/downloads/files/${PN}/sources/$(get_version_component_range 1-2)/src/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~ppc64 ~x86"
MYOPTIONS="ipv6 tcpd vim-syntax"

DEPENDENCIES="
    build+run:
        dev-libs/glib
        sys-apps/eventlog
        tcpd? ( >=sys-apps/tcp-wrappers-7.6 )
    build:
        dev-util/pkg-config
    post:
        vim-syntax? ( >=app-editors/vim-runtime-7:* )
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --sysconfdir=/etc/syslog-ng
    --enable-dynamic-linking
    --without-libnet
)

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( ipv6 "tcpd tcp-wrapper" )

DEFAULT_SRC_INSTALL_EXTRA_DOCS=(
    VERSION
    contrib/syslog-ng.conf.doc
    doc/reference/syslog-ng.txt
)

src_test() {
    if ! has_version dev-lang/python; then
        ewarn 'dev-lang/python is required to run tests'
        return 0
    fi

    default
}

src_install() {
    default

    if option vim-syntax ; then
        insinto /usr/share/vim/vimfiles/syntax/
        doins "${WORK}/contrib/syslog-ng.vim"
    fi

    # Install default configuration
    insinto /etc/syslog-ng
    doins doc/examples/syslog-ng.conf.sample

    newinitd "${FILES}/syslog-ng.rc6" syslog-ng
    newconfd "${FILES}/syslog-ng.confd" syslog-ng
}

