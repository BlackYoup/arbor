DESCRIPTION="Utilities for showing file differences in various ways."
HOMEPAGE="http://www.gnu.org/software/diffutils"
SRC_URI="ftp://alpha.gnu.org/pub/gnu/${PN}/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="nls"

DEPENDENCIES=""

src_compile() {
    econf $(option_enable nls) || die "Configure failed."
    emake || die "Make failed."
}

src_install() {
    emake DESTDIR="${D}" install || die "Install failed."
    dodoc ABOUT-NLS AUTHORS INSTALL NEWS README THANKS TODO
}
