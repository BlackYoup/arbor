require multilib

SUMMARY="a collection of programs for inspecting and manipulating configuration of PCI devices"
HOMEPAGE="http://mj.ucw.cz/pciutils.shtml"
DOWNLOADS="ftp://atrey.karlin.mff.cuni.cz/pub/linux/pci/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    run:
        sys-apps/pciutils-data
"

DEFAULT_SRC_COMPILE_PARAMS=(
    ZLIB="no" DNS="no" OPT="${CFLAGS} -fPIC" STRIP=""
    CC="${CC}" AR="${AR}" RANLIB="${RANLIB}"
)

DEFAULT_SRC_INSTALL_PARAMS=( install-lib )

src_prepare() {
    default
    sed -i -e '/^PREFIX=/cPREFIX=/usr' \
           -e "/^LIBDIR=/cLIBDIR=/usr/$(get_libdir)" \
           -e '/^IDSDIR=/cIDSDIR=/usr/share/misc' \
           -e '/^MANDIR:=/cMANDIR:=/usr/share/man' \
           -e '/^STRIP=-s/cSTRIP=' \
           Makefile || die "failed to update makefile"
}

src_install() {
    default

    # provided by pciutils-data
    rm -f "${IMAGE}/usr/share/misc/pci.ids" || die "unable to remove pci.ids"
    rmdir "${IMAGE}/usr/share/misc" || die "unable to remove /usr/share/misc"

    # not needed
    rm -f "${IMAGE}/usr/sbin/update-pciids" || die "unable to remove update-pciids"
    rm -f "${IMAGE}/usr/share/man/man8/update-pciids.8" || die "unable to remove update-pciids manpage"
}

