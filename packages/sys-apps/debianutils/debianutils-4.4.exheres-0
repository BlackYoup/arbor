require debian-upstream

SUMMARY="Miscellaneous utilities specific to Debian"
DESCRIPTION="
* installkernel: install a new kernel image
* run-parts: run scripts or programs in a directory
* savelog: save a log file
* tempfile: create a temporary file in a safe manner
"
HOMEPAGE="http://packages.debian.org/${PN}"

REMOTE_IDS="freecode:${PN}"

LICENCES="
    GPL-2
    SMAIL [[ note = [ savelog ] ]]
"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

src_install() {
    # Although the Makefile has an install target, it installs everything
    # into /usr and includes which.

    into /
    dobin tempfile run-parts
    dosbin installkernel

    into /usr
    dosbin savelog

    # needed by run-parts (Gentoo bug #352326)
    keepdir /etc/kernel/postinst.d

    doman tempfile.1 run-parts.8 savelog.8 installkernel.8
    dodoc debian/{changelog,control}
}

