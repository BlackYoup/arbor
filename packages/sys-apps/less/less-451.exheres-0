require multiarch

SUMMARY="Popular pager utility"
HOMEPAGE="http://www.greenwoodsoftware.com/${PN}"
DOWNLOADS="${HOMEPAGE}/${PNV}.tar.gz"

REMOTE_IDS="freecode:${PN}"

UPSTREAM_RELEASE_NOTES="${HOMEPAGE}/news.${PV}.html [[ lang = en ]]"

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS="
    hosts:
        arm-exherbo-linux-gnueabi
        i686-pc-linux-gnu
        x86_64-pc-linux-gnu
"

DEPENDENCIES="
    suggestion:
        sys-apps/lesspipe
"

src_install() {
    multiarch_src_install

    hereenvd 70less <<EOF
LESS="-R -M --shift 5"
EOF
}

