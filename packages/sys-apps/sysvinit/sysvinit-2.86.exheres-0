SUMMARY="SYSV init system"
HOMEPAGE="ftp://ftp.cistron.nl/pub/people/miquels/sysvinit/"
SRC_URI="ftp://ftp.cistron.nl/pub/people/miquels/sysvinit/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        !sys-apps/upstart
"

S="${WORKDIR}/${P}/src"

src_install() {
    dodir /bin /sbin /usr/bin /usr/include \
        /usr/share/man/man1 /usr/share/man/man5 /usr/share/man/man8
    emake ROOT="${D}" install

    cd ..
    dodoc doc/*

    # FIXME: Need to install /etc/inittab and reboot+shutdown scripts
}
