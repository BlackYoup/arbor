SUMMARY="Keyboard and console utilities"
HOMEPAGE="http://freshmeat.net/projects/kbd/"
DOWNLOADS="ftp://ftp.altlinux.org/pub/people/legion/kbd/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS="nls"

DEPENDENCIES="
    build:
        nls? ( sys-devel/gettext )
"

DEFAULT_SRC_PREPARE_PATCHES=(
    -p1 "${FILES}/${PNV}-unimap.patch"
    -p0 "${FILES}/${PNV}-cz-qwerty-map.patch"
    -p0 "${FILES}/${PNV}-jp-escape.patch"
    -p1 "${FILES}/${PNV}-missing-configure.patch"
    -p1 "${FILES}/${PNV}-kbio.patch"
)

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=(
    "nls"
)

src_prepare() {
    sed -i 's:install -s:install:' src/Makefile.in

    # Provide a QWERTZ and QWERTY cz map. Gentoo bug 19010.
    cp data/keymaps/i386/{qwertz,qwerty}/cz.map || die "cz qwerty"

    default
}

src_install() {
    default

    insinto /usr/share/doc/${PNVR}/html
    doins doc/*.html

    # Broken.
    rm -rf "${IMAGE}"/usr/share/locale/{da,fr,sv,tr}
}
