From: "Wulf C. Krueger" <philantrop@exherbo.org>
Date: Sat, 23 Feb 2013 12:54:50 +0100
Subject: [PATCH] Explicitly link to librt
Upstream: Not yet.

---
 dbus/Makefile.am  | 1 +
 tools/Makefile.am | 3 +++
 2 files changed, 4 insertions(+)

diff --git a/dbus/Makefile.am b/dbus/Makefile.am
index 3679e3f..d2c3425 100644
--- a/dbus/Makefile.am
+++ b/dbus/Makefile.am
@@ -283,6 +283,7 @@ libdbus_1_la_LDFLAGS = \
 	$(export_symbols) \
 	-version-info $(LT_CURRENT):$(LT_REVISION):$(LT_AGE) \
 	-no-undefined \
+	-lrt \
 	$(NULL)
 
 libdbus_internal_la_CPPFLAGS = \
diff --git a/tools/Makefile.am b/tools/Makefile.am
index cfd54b8..503b881 100644
--- a/tools/Makefile.am
+++ b/tools/Makefile.am
@@ -53,15 +53,18 @@ dbus_uuidgen_SOURCES=				\
 
 dbus_send_LDADD = \
 	$(top_builddir)/dbus/libdbus-1.la \
+	-lrt \
 	$(NULL)
 
 dbus_monitor_LDADD = \
 	$(top_builddir)/dbus/libdbus-1.la \
 	$(NETWORK_libs) \
+	-lrt \
 	$(NULL)
 
 dbus_uuidgen_LDADD = \
 	$(top_builddir)/dbus/libdbus-1.la \
+	-lrt \
 	$(NULL)
 
 dbus_launch_LDADD = \
