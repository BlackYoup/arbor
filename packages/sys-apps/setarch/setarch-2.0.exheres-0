SUMMARY="Run a command with a different reported architecture"
HOMEPAGE="http://www.gentoo.org/"
SRC_URI="mirror://gentoo/${P}.tar.gz"
LICENSE="GPL-2"
SLOT="0"

PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

src_unpack() {
    unpack ${A}
    cd "${S}"
    cp "${FILESDIR}/Makefile" . || die "cp Makefile failed"
}

src_install() {
    emake install DESTDIR="${D}"
}
