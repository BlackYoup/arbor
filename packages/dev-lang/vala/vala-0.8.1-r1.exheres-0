require alternatives gnome.org

SUMMARY="A modern C#-like language for GNOME development"
HOMEPAGE="http://live.gnome.org/Vala"

LICENCES="LGPL-2.1"
SLOT="0.9"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-libs/libxslt
        dev-util/pkg-config[>=0.20]
    build+run:
        dev-libs/glib:2[>=2.12]
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    '--program-suffix=-1.0'
    '--enable-vapigen'
)

src_test() {
    unset DISPLAY
    sydboxcmd "net/whitelist/bind/unix-abstract:///tmp/dbus-*"
    default
}

src_install() {
    default

    local src target alternatives=()
    edo pushd "${IMAGE}"

    alternatives+=( /usr/bin/vala valac-1.0 )

    for src in usr/bin/{valac,vala-gen-introspect,vapigen,vapicheck}-1.0 \
               usr/share/man/man1/*-1.0.1; do
        target=${src/-1.0}
        alternatives+=( /${target} ${src##*/} )
    done
    edo popd

    alternatives_for ${PN} ${SLOT} ${SLOT} "${alternatives[@]}"
}
