 	$(vapigen_VALASOURCES:.vala=.c) \
 	$(NULL)
 
+if ENABLE_BUILD_FROM_VALA
+vapigen_SOURCES += vapigen.vala.stamp
+endif
+
 vapicheck_VALASOURCES = \
 	valavapicheck.vala \
 	$(NULL)
 
 vapicheck_SOURCES = \
-	vapicheck.vala.stamp \
 	$(vapicheck_VALASOURCES:.vala=.c) \
 	$(NULL)
 
+if ENABLE_BUILD_FROM_VALA
+vapicheck_SOURCES += vapicheck.vala.stamp
