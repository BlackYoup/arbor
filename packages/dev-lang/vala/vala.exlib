require alternatives

if ever at_least 0.13 ; then
    require gnome.org [ suffix=.tar.xz ]
else
    require gnome.org
fi

export_exlib_phases src_test src_install

SUMMARY="A modern C#-like language for GNOME development"
HOMEPAGE="http://live.gnome.org/Vala"

LICENCES="LGPL-2.1"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-libs/libxslt
        dev-util/pkg-config[>=0.20]
        sys-devel/bison
        sys-devel/flex
    build+run:
        dev-libs/glib:2[>=2.25.9]
    test:
        sys-apps/dbus
"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--disable-unversioned' '--enable-vapigen' )

vala_src_test() {
    unset DISPLAY

    esandbox allow_net 'unix-abstract:/tmp/dbus-*'
    default
    esandbox disallow_net 'unix-abstract:/tmp/dbus-*'
}

vala_src_install() {
    local src target alternatives=()

    default

    if test $(expr "${SLOT} < 0.16") ; then
        edo mv "${IMAGE}"usr/share/aclocal/vala.m4 "${IMAGE}"usr/share/aclocal/vala-${SLOT##*.}.m4
    else
        edo mkdir "${IMAGE}"usr/share/aclocal/
        edo cp "${WORK}"/vala.m4 "${IMAGE}"usr/share/aclocal/vala-${SLOT##*.}.m4
    fi

    edo pushd "${IMAGE}"
    alternatives+=( /usr/bin/vala valac-${SLOT} )
    for src in usr/bin/{valac,vala-gen-introspect,vapigen,vapicheck}-${SLOT} \
               usr/share/man/man1/*-${SLOT}.1 ; do
        target=${src/-${SLOT}}
        alternatives+=( /${target} ${src##*/} )
    done
    edo popd

    alternatives_for ${PN} ${SLOT} ${SLOT} "${alternatives[@]}"
}

