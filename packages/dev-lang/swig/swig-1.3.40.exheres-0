SUMMARY="Simplified Wrapper and Interface Generator"
HOMEPAGE="http://www.swig.org/"
DOWNLOADS="mirror://sourceforge/${PN}/${PNV}.tar.gz"

LICENCES="as-is"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="doc lua perl python ruby"

DEPENDENCIES="
    build+run:
        lua? ( dev-lang/lua:= )
        perl? ( dev-lang/perl:=[=5*] )
        python? ( dev-lang/python:=[=2*] )
        ruby? ( dev-lang/ruby:= )"

RESTRICT="test"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --without-{allegrocl,chicken,clisp,csharp,gcj,guile,java,mono,mzscheme,ocaml,octave,php,pike,python3,r,tcl,tk}
    --without-doc
    # Breaks tests
    --disable-ccache
)
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( lua "perl perl5" python ruby )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( NEW FUTURE )

src_test_expensive() {
    if has_version dev-libs/boost ; then
        emake check
    else
        ewarn "Swig needs dev-libs/boost for its tests"
    fi
}

src_install() {
    default

    if option doc; then
        dodir /usr/share/doc/${PNVR}
        insinto /usr/share/doc/${PNVR}
        doins -r Doc/{Devel,Manual}
    fi
}

