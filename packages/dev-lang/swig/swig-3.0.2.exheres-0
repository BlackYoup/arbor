require sourceforge [ suffix=tar.gz ]

SUMMARY="Simplified Wrapper and Interface Generator"
HOMEPAGE="http://www.${PN}.org"

REMOTE_IDS+=" freecode:${PN}"

UPSTREAM_DOCUMENTATION="${HOMEPAGE}/Doc$(ever range 1-2)/SWIGDocumentation.html [[ lang = en ]]"
UPSTREAM_RELEASE_NOTES="${HOMEPAGE}/Release/RELEASENOTES [[ lang = en ]]"

LICENCES="GPL-3 as-is"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    doc
    lua
    perl
    python
    ruby
"

# TODO: python3 has an extra switch
DEPENDENCIES="
    build+run:
        dev-libs/pcre
        lua? ( dev-lang/lua:= )
        perl? ( dev-lang/perl:=[=5*] )
        python? ( dev-lang/python:=[=2*] )
        ruby? ( dev-lang/ruby:= )
    test-expensive:
        dev-libs/boost[>=1.20.0]
        perl? ( dev-perl/Test-Simple )
"

RESTRICT="test"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --with-pcre
    --without-{allegrocl,chicken,clisp,csharp,d,gcj,go,guile,java,javascript,mono,mzscheme,ocaml,octave,php,pike,python3,r,tcl}
    --without-doc
    # Breaks tests
    --disable-ccache
)
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( lua "perl perl5" python ruby )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( NEW FUTURE )

src_test_expensive() {
    emake check
}

src_install() {
    default

    if option doc; then
        dodir /usr/share/doc/${PNVR}
        insinto /usr/share/doc/${PNVR}
        doins -r Doc/{Devel,Manual}
    fi
}

