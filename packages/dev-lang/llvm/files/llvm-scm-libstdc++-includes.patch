@@ -122,6 +122,15 @@ void InitHeaderSearch::AddDefaultSystemIncludePaths(const LangOptions &Lang) {
 #else
 
   if (Lang.CPlusPlus) {
+    // Exherbo 2009-06-12
+    AddPath("/usr/include/c++/4.4.0", System, true, false, false);
+    AddPath("/usr/include/c++/4.4.0/i686-pc-linux-gnu", System, true, false,
+        false);
+    AddPath("/usr/include/c++/4.4.0/backward", System, true, false, false);
+    AddPath("/usr/include/c++/4.4.0/x86_64-pc-linux-gnu", System, true,
+        false, false);
+    AddPath("/usr/include/linux", System, true, false, false);
+
     AddPath("/usr/include/c++/4.2.1", System, true, false, false);
     AddPath("/usr/include/c++/4.2.1/i686-apple-darwin10", System, true, false,
         false);
