From 0df99ccfc3575f25a805724e7fb9942ba664ad51 Mon Sep 17 00:00:00 2001
From: Paul Seidler <pl.seidler@gmail.com>
Date: Sun, 26 Jun 2011 16:59:13 +0000
Subject: [PATCH] Replace lib with @@EXHERBO_LIBDIR@@ for multilib.
Upstream: no

---
 Lib/distutils/command/install.py    |    8 ++++----
 Lib/distutils/sysconfig.py          |    2 +-
 Lib/distutils/tests/test_install.py |    4 ++--
 Lib/site.py                         |    6 +++---
 Makefile.pre.in                     |    2 +-
 Modules/getpath.c                   |   10 +++++-----
 setup.py                            |    6 +++---
 7 files changed, 19 insertions(+), 19 deletions(-)

diff --git a/Lib/distutils/command/install.py b/Lib/distutils/command/install.py
index 2a905d9..e8512ec 100644
--- a/Lib/distutils/command/install.py
+++ b/Lib/distutils/command/install.py
@@ -46,15 +46,15 @@ else:
 
 INSTALL_SCHEMES = {
     'unix_prefix': {
-        'purelib': '$base/lib/python$py_version_short/site-packages',
-        'platlib': '$platbase/lib/python$py_version_short/site-packages',
+        'purelib': '$base/@@EXHERBO_LIBDIR@@/python$py_version_short/site-packages',
+        'platlib': '$platbase/@@EXHERBO_LIBDIR@@/python$py_version_short/site-packages',
         'headers': '$base/include/python$py_version_short/$dist_name',
         'scripts': '$base/bin',
         'data'   : '$base',
         },
     'unix_home': {
-        'purelib': '$base/lib/python',
-        'platlib': '$base/lib/python',
+        'purelib': '$base/@@EXHERBO_LIBDIR@@/python',
+        'platlib': '$base/@@EXHERBO_LIBDIR@@/python',
         'headers': '$base/include/python/$dist_name',
         'scripts': '$base/bin',
         'data'   : '$base',
diff --git a/Lib/distutils/sysconfig.py b/Lib/distutils/sysconfig.py
index 9842d26..f1b8a7a 100644
--- a/Lib/distutils/sysconfig.py
+++ b/Lib/distutils/sysconfig.py
@@ -118,7 +118,7 @@ def get_python_lib(plat_specific=0, standard_lib=0, prefix=None):
 
     if os.name == "posix":
         libpython = os.path.join(prefix,
-                                 "lib", "python" + get_python_version())
+                                 "@@EXHERBO_LIBDIR@@", "python" + get_python_version())
         if standard_lib:
             return libpython
         else:
diff --git a/Lib/distutils/tests/test_install.py b/Lib/distutils/tests/test_install.py
index ed69b0c..05af5fd 100644
--- a/Lib/distutils/tests/test_install.py
+++ b/Lib/distutils/tests/test_install.py
@@ -33,7 +33,7 @@ class InstallTestCase(support.TempdirManager,
         dist.script_name = os.path.join(builddir, "setup.py")
         dist.command_obj["build"] = support.DummyCommand(
             build_base=builddir,
-            build_lib=os.path.join(builddir, "lib"),
+            build_lib=os.path.join(builddir, "@@EXHERBO_LIBDIR@@"),
             )
 
         cmd = install(dist)
@@ -48,7 +48,7 @@ class InstallTestCase(support.TempdirManager,
             expected = os.path.normpath(expected)
             self.assertEqual(got, expected)
 
-        libdir = os.path.join(destination, "lib", "python")
+        libdir = os.path.join(destination, "@@EXHERBO_LIBDIR@@", "python")
         check_path(cmd.install_lib, libdir)
         check_path(cmd.install_platlib, libdir)
         check_path(cmd.install_purelib, libdir)
diff --git a/Lib/site.py b/Lib/site.py
index a0489fa..4610f3c 100644
--- a/Lib/site.py
+++ b/Lib/site.py
@@ -250,7 +250,7 @@ def addusersitepackages(known_paths):
                                  "site-packages")
     else:
         USER_BASE = env_base if env_base else joinuser("~", ".local")
-        USER_SITE = os.path.join(USER_BASE, "lib",
+        USER_SITE = os.path.join(USER_BASE, "@@EXHERBO_LIBDIR@@",
                                  "python" + sys.version[:3],
                                  "site-packages")
 
@@ -272,10 +272,10 @@ def addsitepackages(known_paths):
         if sys.platform in ('os2emx', 'riscos'):
             sitedirs.append(os.path.join(prefix, "Lib", "site-packages"))
         elif os.sep == '/':
-            sitedirs.append(os.path.join(prefix, "lib",
+            sitedirs.append(os.path.join(prefix, "@@EXHERBO_LIBDIR@@",
                                         "python" + sys.version[:3],
                                         "site-packages"))
-            sitedirs.append(os.path.join(prefix, "lib", "site-python"))
+            sitedirs.append(os.path.join(prefix, "@@EXHERBO_LIBDIR@@", "site-python"))
         else:
             sitedirs.append(prefix)
             sitedirs.append(os.path.join(prefix, "lib", "site-packages"))
diff --git a/Makefile.pre.in b/Makefile.pre.in
index ed1dc33..f2108ee 100644
--- a/Makefile.pre.in
+++ b/Makefile.pre.in
@@ -97,7 +97,7 @@ LIBDIR=		@libdir@
 MANDIR=		@mandir@
 INCLUDEDIR=	@includedir@
 CONFINCLUDEDIR=	$(exec_prefix)/include
-SCRIPTDIR=	$(prefix)/lib
+SCRIPTDIR=	$(prefix)/@@EXHERBO_LIBDIR@@
 
 # Detailed destination directories
 BINLIBDEST=	$(LIBDIR)/python$(VERSION)
diff --git a/Modules/getpath.c b/Modules/getpath.c
index 112d6d3..bfabae8 100644
--- a/Modules/getpath.c
+++ b/Modules/getpath.c
@@ -119,8 +119,8 @@
 #endif
 
 #ifndef PYTHONPATH
-#define PYTHONPATH PREFIX "/lib/python" VERSION ":" \
-              EXEC_PREFIX "/lib/python" VERSION "/lib-dynload"
+#define PYTHONPATH PREFIX "/@@EXHERBO_LIBDIR@@/python" VERSION ":" \
+              EXEC_PREFIX "/@@EXHERBO_LIBDIR@@/python" VERSION "/lib-dynload"
 #endif
 
 #ifndef LANDMARK
@@ -131,7 +131,7 @@ static wchar_t prefix[MAXPATHLEN+1];
 static wchar_t exec_prefix[MAXPATHLEN+1];
 static wchar_t progpath[MAXPATHLEN+1];
 static wchar_t *module_search_path = NULL;
-static wchar_t lib_python[] = L"lib/python" VERSION;
+static wchar_t lib_python[] = L"@@EXHERBO_LIBDIR@@/python" VERSION;
 
 /* In principle, this should use HAVE__WSTAT, and _wstat
    should be detected by autoconf. However, no current
@@ -612,7 +612,7 @@ calculate_path(void)
     }
     else
         wcsncpy(zip_path, L"" PREFIX, MAXPATHLEN);
-    joinpath(zip_path, L"lib/python00.zip");
+    joinpath(zip_path, L"@@EXHERBO_LIBDIR@@/python00.zip");
     bufsz = wcslen(zip_path);   /* Replace "00" with version */
     zip_path[bufsz - 6] = VERSION[0];
     zip_path[bufsz - 5] = VERSION[2];
@@ -622,7 +622,7 @@ calculate_path(void)
             fprintf(stderr,
                 "Could not find platform dependent libraries <exec_prefix>\n");
         wcsncpy(exec_prefix, L"" EXEC_PREFIX, MAXPATHLEN);
-        joinpath(exec_prefix, L"lib/lib-dynload");
+        joinpath(exec_prefix, L"@@EXHERBO_LIBDIR@@/lib-dynload");
     }
     /* If we found EXEC_PREFIX do *not* reduce it!  (Yet.) */
 
diff --git a/setup.py b/setup.py
index 1e15b7a..011d57c 100644
--- a/setup.py
+++ b/setup.py
@@ -355,7 +355,7 @@ class PyBuildExt(build_ext):
                 with open(tmpfile) as fp:
                     multiarch_path_component = fp.readline().strip()
                 add_dir_to_list(self.compiler.library_dirs,
-                                '/usr/lib/' + multiarch_path_component)
+                                '/usr/@@EXHERBO_LIBDIR@@/' + multiarch_path_component)
                 add_dir_to_list(self.compiler.include_dirs,
                                 '/usr/include/' + multiarch_path_component)
         finally:
@@ -633,11 +633,11 @@ class PyBuildExt(build_ext):
             elif curses_library:
                 readline_libs.append(curses_library)
             elif self.compiler.find_library_file(lib_dirs +
-                                               ['/usr/lib/termcap'],
+                                               ['/usr/@@EXHERBO_LIBDIR@@/termcap'],
                                                'termcap'):
                 readline_libs.append('termcap')
             exts.append( Extension('readline', ['readline.c'],
-                                   library_dirs=['/usr/lib/termcap'],
+                                   library_dirs=['/usr/@@EXHERBO_LIBDIR@@/termcap'],
                                    extra_link_args=readline_extra_link_args,
                                    libraries=readline_libs) )
         else:
