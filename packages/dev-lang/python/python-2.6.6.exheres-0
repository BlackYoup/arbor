require python-build

PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"

test_prepare_one_multibuild() {
    edo cd "${WORKBASE}/${MULTIBUILD_CLASS}/${MULTIBUILD_TARGET}/Python-${PV}"

    # Fails under network sandboxing
    edo rm Lib/test/test_{asynchat,asyncore,docxmlrpc,epoll,ftplib,httplib,httpservers,logging,multiprocessing,poplib,smtplib,socket,telnetlib,urllib2,urllib2_localnet,xmlrpc}.py
    # Fails for fresh installs
    edo rm Lib/distutils/tests/test_build_ext.py
    # Fails under MULTIBUILD_C == 32
    edo rm Lib/test/test_distutils.py
}

