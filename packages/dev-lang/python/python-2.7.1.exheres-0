require python-build

PLATFORMS="~amd64"

DEPENDENCIES+="
    build:
        sys-devel/autoconf[>=2.65]
    build+run:
        dev-libs/expat
"

DEFAULT_SRC_CONFIGURE_PARAMS+=( '--with-system-expat' )

src_prepare() {
    # support autoconf versions other than 2.65
    edo sed -ie '8,14d' "${WORK}"/configure.in

    python-build_src_prepare

    # Replace still-to-be-done libdir variables. This must be done *after*
    # `eautoreconf` is called above.
    edo sed -ie "s:@@EXHERBO_LIBDIR@@:$(get_libdir):g" \
        Lib/sysconfig.py \
        Lib/test/test_site.py

    # Python 2.7.1 requires top-level config.sub and config.guess, so run
    # `automake` to copy these files from /usr/share/gnuconfig (`eautomake`
    # would be a no-op here due to the absence of Makefile.am and
    # GNUmakefile.am).
    edo automake --add-missing --copy
}

src_test() {
    # strange file access wishes
    edo rm Lib/test/test_socket.py

    # problems with path resolution
    edo rm Lib/test/test_distutils.py

    esandbox allow_net "unix:${TEMP}/pymp-*/listener-*"

    # FIXME: Binding to 0.0.0.0 is bad mmkay? -alip
    esandbox allow_net "inet:0.0.0.0@0"
    esandbox allow_net "inet6:::@0"
    esandbox allow_net --connect "inet:0.0.0.0@0"

    # TODO: not sure about the port range, use passive ports
    esandbox allow_net "inet:0.0.0.0@1024-65535"
    esandbox allow_net --connect "inet:127.0.0.1@1024-65535"

    python-build_src_test
}

src_install() {
    python-build_src_install

    # remove empty directory
    edo rmdir "${IMAGE}"/usr/$(get_libdir)/${PN}${SLOT}/lib-old
}

