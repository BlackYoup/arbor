require flag-o-matic multilib toolchain-funcs autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.10 ] ] python

export_exlib_phases src_prepare src_configure src_test src_install pkg_postinst pkg_postrm

MY_PNV="Python-${PV}"

SUMMARY="Python interpreter"
HOMEPAGE="http://www.${PN}.org/"
DOWNLOADS="http://${PN}.org/ftp/${PN}/${PV}/${MY_PNV}.tar.bz2"

UPSTREAM_DOCUMENTATION="
http://docs.${PN}.org/$(ever range 1-2)/
"
UPSTREAM_RELEASE_NOTES="${HOMEPAGE}/download/releases/${PV}/"

LICENCES="PSF-2.2"
SLOT="$(ever range 1-2)"
MYOPTIONS="berkdb gdbm examples ipv6 readline sqlite tk
"

# FIXME: Internal copy of dev-libs/expat
DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-libs/libffi
        dev-libs/openssl
        sys-libs/zlib[>=1.1.3]
        berkdb? ( sys-libs/db:=[>=3.1] )
        gdbm? ( sys-libs/gdbm )
        readline? ( sys-libs/readline[>=4.1] )
        sqlite? ( dev-db/sqlite:3 )
        tk? ( dev-lang/tk[>=8.0] )
"

WORK="${WORKBASE}/${MY_PNV}"
DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-shared
    --enable-unicode=ucs4
    --with-system-ffi
)
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( ipv6 )

python-build_src_prepare() {
    [[ -d ${FILES}/${PVR} ]] && expatch "${FILES}/${PVR}/"

    sed -i -e "s:@@EXHERBO_LIBDIR@@:$(get_libdir):g" \
        Lib/distutils/command/install.py \
        Lib/distutils/sysconfig.py \
        Lib/site.py \
        Makefile.pre.in \
        Modules/Setup.dist \
        Modules/getpath.c \
        setup.py || die "sed failed to replace EXHERBO_LIBDIR"

    eautoreconf
}

python-build_src_configure() {
    # dbm module can link to berkdb or gdbm.
    # default to gdbm when both are enabled.
    local disable

    option berkdb   || option gdbm || disable="dbm"
    option berkdb   || disable="${disable} bsddb"
    option gdbm     || disable="${disable} gdbm"
    option readline || disable="${disable} readline"
    option sqlite   || disable="${disable} _sqlite3"
    option tk       || disable="${disable} _tkinter"
    export PYTHON_DISABLE_MODULES="${disable}"

    export OPT="${CFLAGS}"
    export CPPFLAGS="$(pkg-config --cflags-only-I libffi) ${CPPFLAGS}"

    # export CXX so it ends up in /usr/lib/pythonx.y/config/Makefile
    tc-export CXX

    default
}

python-build_src_test() {
    python_enable_pyc

    # rerun failed tests in verbose mode (regrtest -w)
    EXTRATESTOPTS="-w" emake test
}

python-build_src_install() {
    default

    mv "${IMAGE}"/usr/$(get_libdir)/{${PN}${SLOT}/config,}/libpython${SLOT}.a ||
        die "Couldn't move libpython${SLOT}.a to libdir"
}

python-build_pkg_postinst() {
    python_version

    python_mod_optimize
    python_mod_optimize -x site-packages \
                        -x test /usr/$(get_libdir)/python${PYVER}
}

python-build_pkg_postrm() {
    python_version
    python_mod_cleanup /usr/$(get_libdir)/python${PYVER}
}

