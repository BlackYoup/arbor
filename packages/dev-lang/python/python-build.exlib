python-build_src_prepare() {
    [[ -d ${FILES}/${PVR} ]] && expatch "${FILES}/${PVR}/"

    sed -i -e "s:@@EXHERBO_LIBDIR@@:$(get_libdir):g" \
        Lib/distutils/command/install.py \
        Lib/distutils/sysconfig.py \
        Lib/site.py \
        Makefile.pre.in \
        Modules/Setup.dist \
        Modules/getpath.c \
        setup.py || die "sed failed to replace EXHERBO_LIBDIR"

    eautoreconf
}

python-build_src_configure() {
    # dbm module can link to berkdb or gdbm.
    # default to gdbm when both are enabled.
    local disable

    option berkdb   || option gdbm || disable="dbm"
    option berkdb   || disable="${disable} bsddb"
    option gdbm     || disable="${disable} gdbm"
    option readline || disable="${disable} readline"
    option sqlite   || disable="${disable} _sqlite3"
    option tk       || disable="${disable} _tkinter"
    export PYTHON_DISABLE_MODULES="${disable}"

    export OPT="${CFLAGS}"
    export CPPFLAGS="$(pkg-config --cflags-only-I libffi) ${CPPFLAGS}"

    # export CXX so it ends up in /usr/lib/pythonx.y/config/Makefile
    tc-export CXX

    default
}

python-build_src_test() {
    unset DISPLAY

    python_enable_pyc

    # rerun failed tests in verbose mode (regrtest -w)
    EXTRATESTOPTS="-w" emake test

    python_disable_pyc
}

python-build_src_install() {
    default

    edo rm "${IMAGE}"/usr/bin/smtpd.py
    edo mv "${IMAGE}"/usr/$(get_libdir)/{${PN}${SLOT}/config,}/libpython${SLOT}.a

    # Byte-compile using the executable we just built
    export PYTHON=${IMAGE}/usr/bin/python${SLOT}
    # Let aforementioned binary find its libpython*.so
    export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}${LD_LIBRARY_PATH:+:}${IMAGE}/usr/$(get_libdir)/"

    find "${IMAGE}" -type f -name '*.py' -exec touch {} +
    # Some files like /usr/lib64/python2.6/test/bad{_coding,syntax}* cause errors when
    # bytecompiling, -x regex ignores those
    edo "${PYTHON}"    -mcompileall -f -q -d $(python_get_libdir) -x "$(python_get_libdir)/test/bad.*.py" "${IMAGE}$(python_get_libdir)"
    edo "${PYTHON}" -O -mcompileall -f -q -d $(python_get_libdir) -x "$(python_get_libdir)/test/bad.*.py" "${IMAGE}$(python_get_libdir)"

    # NOTE regarding alternatives:
    # python[=2*] & py3k don't collide, except for /usr/bin/2to3, which would be easy to fix.
    # Therefore there should probably be seperate alternative modules for both branches
    # (eclectic python, eclectic py3k?)
}

