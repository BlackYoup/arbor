#require python
require autotools

SUMMARY="YASM Modular Assembler Project"
DESCRIPTION='
Yasm is a complete rewrite of the NASM assembler under the "new" BSD License.
Yasm currently supports the x86 and AMD64 instruction sets, accepts NASM and GAS assembler syntaxes,
outputs binary, ELF32, ELF64, 32 and 64-bit Mach-O, RDOFF2, COFF, Win32, and Win64 object formats,
and generates source debugging information in STABS, DWARF 2, and CodeView 8 formats.
'
HOMEPAGE="http://www.tortall.net/projects/${PN}/"
SOURCES="${HOMEPAGE}/releases/${P}.tar.gz"

LICENCES="BSD"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="nls python"

DEPENDENCIES="
    build:
        nls? ( sys-devel/gettext )
    build+run:
        python? (
            dev-lang/python
            python-dev/pyrex
        )"

# The fPIC patch breaks tests for me, disable tests if we apply it.
RESTRICT="python? ( test )"

AT_M4DIR="m4"
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( nls python 'python python-bindings' )

src_prepare() {
    if option python; then
        DEFAULT_SRC_PREPARE_PATCHES=( "${FILESDIR}/${PN}-0.7.1-fPIC-compile-fix.patch" )
        autotools_src_prepare
    fi
}

