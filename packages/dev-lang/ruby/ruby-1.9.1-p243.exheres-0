require ruby autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ none ] ]

LICENCES="|| ( Ruby-1.9 GPL-2 )"
PLATFORMS="~amd64 ~ppc64 ~x86"

src_prepare() {
    default
    eautoconf
}

src_install() {
    rmdir lib/rdoc/markup/simple_markup || die "failed to rmdir lib/rdoc/markup/simple_markup"
    rmdir lib/rdoc/generator/template || die "failed to rmdir lib/rdoc/generator/template"

    ruby_src_install
}

