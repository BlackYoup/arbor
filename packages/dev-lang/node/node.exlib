export_exlib_phases src_test src_install

MY_PV="v${PV}"
MY_PNV="${PN}-${MY_PV}"
WORK="${WORKBASE}/${MY_PNV}"

SUMMARY="Evented I/O for V8 Javascript"
DESCRIPTION="Desgined to provide an easy way to build scalable network applications, similar to Event Machine or Twisted"
DOWNLOADS="http://nodejs.org/dist/${MY_PV}/${MY_PNV}.tar.gz"
HOMEPAGE="http://nodejs.org/"
LICENCES="MIT"

require waf

DEFAULT_SRC_PREPARE_PATCHES=(
    -p1 "${FILES}/ef046bf4f64161c6d0f4c4920ab62895789d576c.patch"
    -p1 "${FILES}/allow-rebuilding-keys-without-interaction.patch"
)

DEPENDENCIES="
    build+run:
        dev-libs/libev
        dev-libs/libpthread-stubs
        dev-libs/openssl
        dev-libs/v8
        net-dns/c-ares
"

WAF_SRC_CONFIGURE_PARAMS=(
    --shared-cares
    --shared-v8
)

node_src_install() {
    default

    edo rmdir "${IMAGE}/usr/include/node/ev"
}

node_src_test() {
    # rebuild certificates, using updated paramters from ef046bf4f64161c6d0f4c4920ab62895789d576c.patch
    emake -j1 -C test/fixtures/keys clean
    emake -j1 -C test/fixtures/keys

    esandbox disable_net
    emake "${DEFAULT_SRC_TEST_PARAMS[@]}" test
    esandbox enable_net
}
