LICENCES="cryptopp"
SLOT="0"
PLATFORMS="amd64 x86"
MYOPTIONS=""

DEPENDENCIES=""

src_install() {
    emake PREFIX=${IMAGE}/usr/ install
    rm -r ${IMAGE}/usr/bin
}

src_compile() {
    # do not compile with more that -O1
    emake CXXFLAGS="${CXXFLAGS/-O?/-O1}"
}

src_test() {
    # bypass tests as they do not work
    true
}
