DESCRIPTION="GNU Multiple Precision arithmetic library"
HOMEPAGE="http://gmplib.org"
SRC_URI="mirror://gnu/${PN}/${P}.tar.bz2"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPEND=""
RDEPEND=""

src_configure() {
	case ${ARCH} in
		amd64)
			ABI=64
			;;
		x86)
			ABI=32
			;;
	esac

	default
}

src_install() {
    emake DESTDIR=${D} install
}
