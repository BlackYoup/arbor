require gnu

SUMMARY="GNU Multiple Precision arithmetic library"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

DEFAULT_SRC_CONFIGURE_PARAMS=( --enable-cxx --hates=docdir )

src_configure() {
    case ${ARCH} in
        amd64)
            ABI=64
            ;;
        ppc64)
            ABI=mode64
            ;;
        x86)
            ABI=32
            ;;
    esac

    default
}
