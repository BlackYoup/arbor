require flag-o-matic toolchain-funcs

MY_PNV="gc-${PV/_/}"

SUMMARY="The Boehm-Demers-Weiser conservative garbage collector"
HOMEPAGE="http://www.hboehm.info/gc"
DOWNLOADS="${HOMEPAGE}/gc_source/${MY_PNV}.tar.gz"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64 ~arm ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        virtual/pkg-config[>=0.9.0]
    build+run:
        dev-libs/libatomic_ops[>=7.4.2]
"

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/${PNV}-musl.patch
)

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-cplusplus
    --enable-threads=posix
    --disable-static
    --with-libatomic-ops
    --datadir=/usr/share/doc/${PNVR}
)

WORK=${WORKBASE}/${MY_PNV%d}

pkg_setup() {
    libc-is-musl && append-flags -DNO_GETCONTEXT
}

