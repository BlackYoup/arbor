MY_PNV="gc-${PV/_/}"
WORK="${WORKBASE}/${MY_PNV}"

SUMMARY="The Boehm-Demers-Weiser conservative garbage collector"
HOMEPAGE="http://www.hpl.hp.com/personal/Hans_Boehm/gc/"
DOWNLOADS="http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/${MY_PNV}.tar.gz"

LICENCES="as-is"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="threads" # cxx

DEPENDENCIES=""

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/${PN}-6.5-gentoo.patch
    "${FILES}"/gc6.6-builtin-backtrace-uclibc.patch
)

src_prepare() {
    sed -i -e '/^SUBDIRS/s/doc//' Makefile.in || die
    default
}

src_configure() {
    local myconf

    if ! option threads ; then
        myconf=${myconf} --disable-threads
    fi

    # $(option_enable cxx cplusplus)
    econf ${myconf} --hates=docdir
}

src_install() {
    default

    rm -r "${IMAGE}"/usr/share/gc || die

    # dist_noinst_HEADERS
    insinto /usr/include/gc
    doins include/{cord.h,ec.h,javaxfc.h}
    insinto /usr/include/gc/private
    doins include/private/*.h

    dodoc README.QUICK doc/README* doc/barrett_diagram
    # dohtml doc/*.html
    newman doc/gc.man GC_malloc.1
}

