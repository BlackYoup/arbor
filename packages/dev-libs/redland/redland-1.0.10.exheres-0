require multilib sourceforge [ project=librdf suffix=gz ]

SUMMARY="High-level interface for the Resource Description Framework"
HOMEPAGE="http://librdf.org"

LICENCES="|| ( LGPL-2.1 GPL-2 Apache-2.0 )"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="berkdb mysql postgresql sqlite ssl virtuoso"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-libs/libxml2
        dev-libs/rasqal[>=0.9.16&<=0.9.99]
        media-libs/raptor[>=1.4.17]
        berkdb? ( sys-libs/db:=[>=3.1&<=4.8] )
        mysql? ( dev-db/mysql )
        postgresql? ( dev-db/postgresql )
        sqlite? ( dev-db/sqlite:3 )
        ssl? ( dev-libs/openssl )
        virtuoso? (
            dev-db/libiodbc
            dev-db/virtuoso-opensource
        )
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --with-xml-parser=libxml
    --with-threads
    --disable-shave
    --enable-modular
)
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=(
    "berkdb bdb"
    "mysql"
    "postgresql"
    "ssl openssl-digests"
    "sqlite"
    "sqlite sqlite-version 3"
    "virtuoso"
    "virtuoso iodbc"
)

src_install() {
    default

    if ! option mysql && ! option postgresql && ! option sqlite && !option virtuoso; then
        edo rmdir "${IMAGE}"/usr/$(get_libdir)/redland
    fi
}

