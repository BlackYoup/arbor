require multilib autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.11 ] ]

SUMMARY="High-level interface for the Resource Description Framework"
HOMEPAGE="http://librdf.org"
DOWNLOADS="http://download.librdf.org/source/${PNV}.tar.gz"

LICENCES="|| ( LGPL-2.1 GPL-2 Apache-2.0 )"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="berkdb mysql postgresql sqlite ssl"
RESTRICT="test" # Some tests segfault: rdf_init_test

DEPENDENCIES="
    build:
        dev-doc/gtk-doc
        dev-util/pkg-config
    build+run:
        dev-libs/libxml2
        dev-libs/rasqal[>=0.9.16&<=0.9.99]
        media-libs/raptor[>=1.4.17]
        berkdb? ( sys-libs/db:= )
        mysql? ( dev-db/mysql )
        postgresql? ( dev-db/postgresql )
        sqlite? ( dev-db/sqlite:3 )
        ssl? ( dev-libs/openssl )
"

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}/${PNV}-sqlite.patch"
    "${FILES}/${PNV}-undefined-symbols-when-dlopening.patch"
)
DEFAULT_SRC_CONFIGURE_PARAMS=(
    --with-xml-parser=libxml
    --with-threads
    --enable-modular
    #--enable-storages=all ?
)
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=(
    "berkdb bdb"
    "mysql"
    "postgresql"
    "ssl openssl-digests"
    "sqlite"
    "sqlite sqlite-version 3"
)

src_install() {
    default

    if ! option mysql && ! option postgresql && ! option sqlite; then
        rmdir "${IMAGE}"/usr/$(get_libdir)/redland || die "Removing empty directories failed"
    fi
}
