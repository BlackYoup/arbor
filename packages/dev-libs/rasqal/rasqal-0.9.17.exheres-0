SUMMARY="library that handles Resource Description Framework (RDF)"
HOMEPAGE="http://librdf.org/rasqal"
DOWNLOADS="http://download.librdf.org/source/${PNV}.tar.gz"

LICENCES="|| ( LGPL-2.1 GPL-2 Apache-2.0 )"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="gmp pcre"

DEPENDENCIES="
    build:
        dev-util/pkg-config
        dev-perl/XML-DOM
        sys-devel/flex
    build+run:
        dev-libs/libxml2
        media-libs/raptor
        gmp? ( dev-libs/gmp )
        !gmp? ( dev-libs/mpfr )
        pcre? ( dev-libs/pcre )"
#       debug? ( dev-libs/dmalloc )

src_configure() {
    econf \
        --disable-shave \
        --enable-xml2 \
        --with-decimal=$(option gmp && echo "gmp" || echo "mpfr") \
        --with-regex-library=$(option pcre && echo "pcre" || echo "posix") \
        --with-raptor=system \
        $(option_enable pcre) \
        --without-dmalloc # $(option_with debug dmalloc)
}

# Note wrt src_test(): 'roqet -d debug' always fails.

