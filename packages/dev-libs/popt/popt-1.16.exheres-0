require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.10 1.11 ] ] multilib

SUMMARY="Command line parsing library"
HOMEPAGE="http://www.rpm5.org"
DOWNLOADS="${HOMEPAGE}/files/${PN}/${PNV}.tar.gz"

REMOTE_IDS="freshmeat:${PN}"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        sys-devel/gettext
"

AT_M4DIR=m4

DEFAULT_SRC_PREPARE_PATCHES=(
    -p1 "${FILES}/popt-1.16-fixtests.patch"
    -p1 "${FILES}/popt-1.16-pkgconfigdir.patch"
)

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-nls
    --with-pkgconfigdir=/usr/$(get_libdir)/pkgconfig
)

