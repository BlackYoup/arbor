SUMMARY="General purpose crypto library based on the code used in GnuPG"
HOMEPAGE="http://www.gnupg.org/"
DOWNLOADS="mirror://gnupg/libgcrypt/${PNV}.tar.bz2"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="nls"

DEPENDENCIES="
    build+run:
        >=dev-libs/libgpg-error-1.4
    build:
        nls? ( sys-devel/gettext )
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --with-capabilities --disable-padlock-support )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( nls )

src_install() {
    default
    rmdir "${IMAGE}"/usr/sbin # Empty directory
}
