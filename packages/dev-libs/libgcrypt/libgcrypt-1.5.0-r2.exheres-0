require easy-multibuild

SUMMARY="General purpose crypto library based on the code used in GnuPG"
HOMEPAGE="http://www.gnupg.org/"
DOWNLOADS="mirror://gnupg/${PN}/${PNV}.tar.bz2"

REMOTE_IDS="freecode:${PN}"

LICENCES="LGPL-2.1 [[ description = [ Applies to the library ] ]]
      GPL-2 [[ description = [ Applies to the manual & tools ] ]]"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ppc64 ~x86"
MYOPTIONS="multibuild_c: 32 64"

DEPENDENCIES="
    build+run:
        dev-libs/libgpg-error[>=1.8][multibuild_c:*(-)?]
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}/9487099071af4478d2882e633a0ade805801d6fa.patch" )

configure_one_multibuild() {
    # --without-capabilities - Alpha code, needs kernel patches
    # --disable-padlock-support - Suggested by upstream, also see Gentoo #201917
    # --enable-static - cryptsetup wants static
    econf \
        --disable-O-flag-munging \
        --without-capabilities \
        --disable-padlock-support \
        --enable-static \
        $(if ! multibuild_default_target C; then
            echo "--with-gpg-error-prefix=/usr/${CHOST}"
        else
            echo '--with-gpg-error-prefix=/usr'
        fi)
}

install_one_multibuild() {
    default
    if ! multibuild_default_target C; then
        dodir "/usr/${CHOST}/bin"
        edo mv "${IMAGE}"/usr/bin/"${PN}"-config "${IMAGE}"/usr/"${CHOST}"/bin
    fi
}

src_install() {
    easy-multibuild_src_install
    edo rmdir "${IMAGE}"/usr/sbin
}

