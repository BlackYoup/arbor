require multilib

SUMMARY="A library for network packet capturing"
HOMEPAGE="http://www.tcpdump.org"
DOWNLOADS="${HOMEPAGE}/release/${PNV}.tar.gz"

REMOTE_IDS="freshmeat:${PN}"

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="bluetooth ipv6"

DEPENDENCIES="
    build:
        sys-devel/bison
        sys-devel/flex
    build+run:
        bluetooth? ( net-wireless/bluez )
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --without-libnl )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( bluetooth ipv6 )

