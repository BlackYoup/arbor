require sourceforge [ suffix=tar.gz ] easy-multibuild [ work=${PNV} ]
require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.13 1.12 1.11 1.10 ] ]

SUMMARY="Userspace access to USB devices"

LICENCES="LGPL-2"
SLOT="0.1"
PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="debug doc multibuild_c: 32 64"

DEPENDENCIES="
    build:
        doc? (
            app-text/openjade
            app-text/docbook-dsssl-stylesheets
            app-text/docbook-utils
            app-text/docbook-sgml-dtd:4.2
        )"

# tests are not well encapsulated
RESTRICT="test"

DEFAULT_SRC_PREPARE_PATCHES=("${FILES}/${PNV}-circular-dependency-cxx.patch")

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( "debug debug all" "doc build-docs" )

WORK="${WORKBASE}"

unpack_prepare_one_multibuild() {
    edo mkdir -p "${WORKBASE}/${MULTIBUILD_CLASS}/${MULTIBUILD_TARGET}"
}

src_unpack() {
    easy-multibuild_run_phase
}

configure_prepare_one_multibuild() { :; }

prepare_one_multibuild() {
    default
    edo sed -i -e 's:-Werror::' Makefile.am
    eautoreconf
}

src_prepare() {
    easy-multibuild_run_phase
}

install_one_multibuild() {
    default

    if option doc ; then
        docinto html
        dodoc doc/html/*.html
    fi
}

