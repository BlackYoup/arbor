SUMMARY="Open source SSL and TLS implementation and cryptographic library"
HOMEPAGE="http://www.openssl.org"
SRC_URI="http://www.openssl.org/source/${P}.tar.gz"

LICENSE="BSD"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

src_prepare() {
    # Fix manpath
    sed -i 's:^MANDIR=.*$:MANDIR=/usr/share/man:' Makefile.org || die "sed failed."
}

src_configure() {
    ./config --test-sanity || die "Sanity test failed."
    ./config --prefix=/usr --openssldir=/etc/ssl \
        shared threads || die "Configure failed."
}

src_compile() {
    # parallel build is broken
    emake -j1 || die "Make failed."
}

src_install() {
    # .. and parallel installation is also broken
    emake -j1 INSTALL_PREFIX="${D}" install

    keepdir /etc/ssl/{certs,private}

    dodoc FAQ INSTALL NEWS PROBLEMS README*
}

