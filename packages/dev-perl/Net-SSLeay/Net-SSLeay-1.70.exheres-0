require perl-module [ module_author=MIKEM ]

SUMMARY="Perl extension for using OpenSSL"

LICENCES="|| ( BSD-3 openssl )"
SLOT="0"
PLATFORMS="~amd64 ~armv7 ~x86"
MYOPTIONS="
    ( providers: libressl openssl ) [[ number-selected = exactly-one ]]
"

DEPENDENCIES="
    build+run:
        providers:libressl? ( dev-libs/libressl:= )
        providers:openssl? ( dev-libs/openssl )
    test:
        dev-perl/Test-Exception
        dev-perl/Test-NoWarnings
        dev-perl/Test-Warn
"

DEFAULT_SRC_COMPILE_PARAMS=( OPTIMIZE="${CFLAGS}" )

src_prepare() {
    # https://rt.cpan.org/Public/Bug/Display.html?id=105182
    edo sed -e 's/tests => 123/tests => 122/' \
            -e '/like(my $key_pem4 = Net::SSLeay::PEM_get_string_PrivateKey($pk,"password",$alg2)/d' \
            -i t/local/33_x509_create_cert.t
}

