SUMMARY="Linux kernel headers"
HOMEPAGE="http://www.kernel.org"
DOWNLOADS="mirror://kernel/linux/kernel/v2.6/linux-${PV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

WORK="${WORKBASE}/linux-${PV}"

# FIXME: Need to sanitize headers at some point
DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/${PNV}-includefix.patch
    )


src_compile() {
    # Fix ARCH to match linux-headers values
    case ${ARCH} in
        x86)
            ARCH=i386
            ;;
        amd64)
            ARCH=x86_64
            ;;
    esac

    emake mrproper
    emake headers_check
}

src_install() {
    emake INSTALL_HDR_PATH="${IMAGE}/usr" headers_install
}
