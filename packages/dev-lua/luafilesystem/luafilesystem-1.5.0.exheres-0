require multilib flag-o-matic

SUMMARY="a lua filesystem library"
DESCRIPTION="
LuaFileSystem is a Lua library developed to complement the set of
functions related to file systems offered by the standard Lua
distribution.

LuaFileSystem offers a portable way to access the underlying directory
structure and file attributes.
"
HOMEPAGE="http://keplerproject.github.com/luafilesystem/"

LICENCES="MIT"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DOWNLOADS="http://cloud.github.com/downloads/keplerproject/${PN}/${PNV}.tar.gz"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-lang/lua
"

DEFAULT_SRC_COMPILE_PARAMS=( CC="${CC}" )

src_prepare() {
    append-flags $(pkg-config --cflags lua)
    sed -e "s:\(CFLAGS=\):\1 ${CFLAGS}:" \
        -e "s|/usr/local|${IMAGE}/usr|" \
        -e "s,/lib/,/$(get_libdir)/," \
        -i "${WORK}"/config || die "sed config failed"
}

