require bash-completion perl-module [ module_author=PETDANCE ]

SUMMARY="Ack is a grep-like tool, aimed at programmers with large trees of source code."
HOMEPAGE="http://petdance.com/ack/ http://search.cpan.org/~${MODULE_AUTHOR}/"
BUGS_TO="ingmar@exherbo.org"

SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-lang/perl:*[>=5.8.9]
    build+run:
        dev-perl/File-Next
"

src_install() {
    perl-module_src_install

    dodoc "${FILES}/ackrc.example"
    dobashcompletion etc/ack.bash_completion.sh
}

