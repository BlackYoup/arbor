require elisp-optional

SUMMARY="Command line utilities to work with desktop menu entries"
HOMEPAGE="http://freedesktop.org/wiki/Software/${PN}"
DOWNLOADS="http://www.freedesktop.org/software/${PN}/releases/${PNV}.tar.xz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~arm ~x86"
MYOPTIONS="emacs"

DEPENDENCIES="
    build:
        virtual/pkg-config[>=0.9.0]
    build+run:
        dev-libs/glib:2[>=2.8.0]
"

src_configure() {
    econf EMACS=$(optionv emacs || echo no)
}

src_install() {
    default
    option emacs && elisp-install-site-file
}

