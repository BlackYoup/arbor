require alternatives

SUMMARY="Exuberant ctags"
HOMEPAGE="http://ctags.sourceforge.net"
DOWNLOADS="mirror://sourceforge/ctags/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --with-posix-regex
    --disable-etags
    --enable-tmpdir=/tmp
)

src_install() {
    einstall
    alternatives_for ctags exuberant-ctags 1000 \
        /usr/bin/ctags exuberant-ctags \
        /usr/share/man/man1/ctags.1 exuberant-ctags.1
}

