require bash-completion

SUMMARY="Text mode interface for git"
HOMEPAGE="http://jonas.nitro.dk/tig/"
SRC_URI="http://jonas.nitro.dk/${PN}/releases/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
build+run:
    dev-scm/git
    sys-libs/ncurses"

DEFAULT_SRC_CONFIGURE_PARAMS="--with-libiconv"

src_install() {
    emake DESTDIR="${D}" install

    doman tig.1 tigrc.5
    dodoc BUGS README{,.html} SITES TODO tig{.1,rc.5}.{html,txt}
    dobashcompletion contrib/tig-completion.bash
}
