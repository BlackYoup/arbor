require bash-completion

SUMMARY="Text mode interface for git"
HOMEPAGE="http://jonas.nitro.dk/${PN}/"
DOWNLOADS="${HOMEPAGE}/releases/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
      >=dev-scm/git-1.5.4
        sys-libs/ncurses"

DEFAULT_SRC_CONFIGURE_PARAMS=( --with-libiconv )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( ${PN}{.1,rc.5}.{html,txt} )

src_install() {
    default

    doman ${PN}.1 ${PN}rc.5
    dobashcompletion contrib/${PN}-completion.bash
}

