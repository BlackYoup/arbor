require bash-completion

SUMMARY="Text mode interface for git"
HOMEPAGE="http://jonas.nitro.dk/${PN}/"
DOWNLOADS="${HOMEPAGE}/releases/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-scm/git
        sys-libs/ncurses"

DEFAULT_SRC_CONFIGURE_PARAMS=( --with-libiconv )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( README.html tig{.1,rc.5}.{html,txt} )

src_install() {
    default

    doman tig.1 tigrc.5
    dobashcompletion contrib/tig-completion.bash
}

