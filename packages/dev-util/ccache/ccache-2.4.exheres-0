require multilib

SUMMARY="Compiler cache"
HOMEPAGE="http://ccache.samba.org/"
DOWNLOADS="http://samba.org/ftp/ccache/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

DEFAULT_SRC_CONFIGURE_PARAMS=( --hates=docdir )

src_install() {
    default

    insinto /usr/share/doc/$PNVR/html
    doins web/*.html

    dodir /usr/$(get_libdir)/ccache/bin
    insinto /usr/$(get_libdir)/ccache/bin
    local f
    for f in {${CHOST}-,}{gcc,g++,c++}; do
        dosym /usr/bin/ccache /usr/$(get_libdir)/ccache/bin/${f}
    done
}

