SCM_REPOSITORY="git://git.exherbo.org/${PN}.git"
require scm-git

SUMMARY="Collection of scripts for paludis"
HOMEPAGE="http://www.exherbo.org"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    run:
        dev-scm/git
        net-misc/wget
        sys-apps/paludis
        sys-apps/pax-utils [[ note = [ scanelf is needed by mscan ] ]]
        sys-apps/sed
"

src_install() {
    exeinto /usr/bin
    doexe $(find "${WORK}" -maxdepth 1 -type f ! -name 'Readme' ! -name '.*')

    emagicdocs
}

