require autotools flag-o-matic toolchain-funcs

SUMMARY="An open-source memory debugger for GNU/Linux"
HOMEPAGE="http://www.valgrind.org"
DOWNLOADS="http://www.valgrind.org/downloads/${PNV}.tar.bz2"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="-* ~amd64 ~x86"
MYOPTIONS="platform:amd64 X"

DEPENDENCIES=""

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}/${PNV}-pkg-config.patch" )

src_prepare() {
    default

    sed -e 's:^CFLAGS="-Wno-long-long":& $CFLAGS:' -i configure.in
    sed -e "s:doc/${PN}:doc/${PNV}:" -i docs/Makefile.am

    eautoreconf
}

src_configure() {
    filter-flags -fomit-frame-pointer
    # -ggdb3 causes segfaults at startup
    replace-flags -ggdb3 -ggdb2

    if option platform:amd64 && ! has_multilib_profile; then
        myconf='--enable-only64bit'
    fi

    econf ${myconf} \
        $(option X && echo ' --with-x' || echo ' --with-x=no')
}

