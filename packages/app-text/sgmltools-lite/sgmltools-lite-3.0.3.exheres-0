require python sgml-catalog

SUMMARY="Python interface to SGML software in a DocBook/OpenJade env"
HOMEPAGE="http://sgmltools-lite.sourceforge.net/"
DOWNLOADS="mirror://sourceforge/${PN}/${PNV}.tar.gz
    mirror://sourceforge/${PN}/nw-eps-icons-0.0.1.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="tetex"

DEPENDENCIES="
build:
    app-text/sgml-common
    app-text/docbook-sgml-dtd:3.1
    app-text/docbook-dsssl-stylesheets
    app-text/openjade
    || ( net-www/w3m
         net-www/lynx )"
#    tetex? ( app-text/jadetex )


DEFAULT_SRC_CONFIGURE_PARAMS=( --hates=docdir )
SGML_CATALOG=( "/etc/sgml/sgml-lite.cat
    /usr/share/sgml/stylesheets/sgmltools/sgmltools.cat" )

src_prepare() {
    # Remove CVS directories from the tree
    find . -name CVS | xargs rm -rf
}

src_install() {
    #FIXME
    einstall etcdir="${IMAGE}"/etc/sgml

    dodoc ChangeLog POSTINSTALL README*
    #TODO
    # dohtml -r .

    cd "${WORKBASE}"/nw-eps-icons-0.0.1/images
    insinto /usr/share/sgml/docbook/dsssl-stylesheets/images
    doins *.eps

    cd callouts
    insinto /usr/share/sgml/docbook/dsssl-stylesheets/images/callouts
    doins *.eps

    rm "${IMAGE}"/etc/sgml/catalog.{suse,rh62}

    # Remove file provided by sgml-common
    rm "${IMAGE}"/usr/bin/sgmlwhich

    # Remove the backends that require tetex
    # option tetex || \
    rm "${IMAGE}"/usr/share/sgml/misc/sgmltools/python/backends/{Dvi,Ps,Pdf,JadeTeX}.py

    # List of backends to alias with sgml2*
    # Do not provide sgml2{txt,rtf,html} anymore, they are part of
    # linuxdoc-tools
    local BACKENDS=""
    #option tetex && BACKENDS="ps dvi pdf"

    # Create simple alias scripts that people are used to
    # And make the manpages for those link to the sgmltools-lite manpage
    mandir="${IMAGE}"/usr/share/man/man1
    ScripTEXT="#!/bin/sh\n/usr/bin/sgmltools --backend="
    for back in ${BACKENDS} ; do
        echo -e ${ScripTEXT}${back} '$*' > sgml2${back}
        exeinto /usr/bin
        doexe sgml2${back}

        #FIXME
        cd "${mandir}"
        ln -sf sgmltools-lite.1.gz sgml2${back}.1.gz
    done

    keepdir /usr/share/sgml/misc/sgmltools/site-backends
    keepdir /etc/sgml/catalog.d


}

pkg_postinst() {
    python_mod_optimize /usr/share/sgml/misc/sgmltools/python
    sgml-catalog_pkg_postinst
}

pkg_postrm() {
    python_mod_cleanup /usr/share/sgml/misc/sgmltools/python
    sgml-catalog_pkg_postrm
}

