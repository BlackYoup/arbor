require qmake4 fwbuilder

SUMMARY="FirewallBuilder ${PV} library"

PLATFORMS="~amd64"
MYOPTIONS=""
# Potentially desirable might be snmp and lwres support.
# I don't see any use for stlport.

DEPENDENCIES="
    build+run:
        dev-libs/openssl
        x11-libs/qt:4[>=4.3]
        dev-libs/libxml2[>=2.6.32]
        dev-libs/libxslt[>=1.1.24]
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --without-lwres
    --without-stlport
    --without-ucd-snmp
)

src_configure() {
    default
    eqmake4 ${PN}.pro

    for dir in src src/fwbuilder src/fwcompiler src/test src/confscript etc doc migration ; do
        eqmake4 ${dir}/${dir##*/}.pro -o ${dir}/Makefile
    done
}
