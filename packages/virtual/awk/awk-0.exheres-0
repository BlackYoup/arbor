SUMMARY="Virtual: awk providers"
HOMEPAGE=""

SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    ( providers:
        gawk
        mawk
    ) [[
        *description = [ awk provider ]
        number-selected = at-least-one
    ]]
"

DEPENDENCIES="
    providers:gawk? ( sys-apps/gawk )
    providers:mawk? ( sys-apps/mawk )
"

