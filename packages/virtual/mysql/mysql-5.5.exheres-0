SUMMARY="Virtual: mysql database providers"
HOMEPAGE=""

SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    ( providers:
        mysql
        mariadb
    ) [[
        *description = [ mysql database provider ]
        number-selected = exactly-one
    ]]
"

DEPENDENCIES="
    providers:mysql? ( dev-db/mysql[~>${PV}] )
    providers:mariadb? ( dev-db/mariadb[~>${PV}] )
"

