require multilib

SUMMARY="sieve plugin for dovecot"
HOMEPAGE="http://www.dovecot.org"
SOURCES="http://www.dovecot.org/releases/sieve/${P}.tar.gz"

LICENCES="GPL-2 LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    net-mail/dovecot
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    "--with-dovecot=/usr/$(get_libdir)/dovecot"
)

src_install() {
    default
    rmdir "${D}"/usr/libexec{/dovecot,}
}
