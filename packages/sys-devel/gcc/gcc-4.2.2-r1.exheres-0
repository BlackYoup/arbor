DESCRIPTION="GNU Compiler Collection"
HOMEPAGE="http://gcc.gnu.org"
SRC_URI="http://ftp.gnu.org/gnu/${PN}/${P}/${P}.tar.bz2"

LICENSE="GPL-2"
SLOT="${PV}"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="ada fortran java objc obj-c++ nls propolice"

DEPENDENCIES="build:
                sys-devel/make
              build,run:
                fortran? ( >=dev-libs/gmp-4.1
                    dev-libs/mpfr )"

OBJDIR="${T}/${CHOST}"

src_prepare() {
    # fix for gcc bug #31899. this will be fixed upstream in gcc 4.2.3
    patch -p1 < "${FILESDIR}/${P}-ICE-fix.patch" || die "patch failed."
}

src_configure() {
    mkdir "${OBJDIR}"
    cd "${OBJDIR}"

    LANGS="c++"
    for i in ada fortran objc obj-c++ java; do
        option ${i} && LANGS="${LANGS} ${i}"
    done
    LANGS="${LANGS/ /,}"

    "${S}/configure" \
        --host=${CHOST} \
        --prefix=/usr \
        --infodir=/usr/share/info \
        --enable-languages="${LANGS}" \
        $(option_enable propolice libssp) \
        $(option_enable nls) \
        --disable-multilib \
        || die "Configure failed."
}

src_compile() {
    cd "${OBJDIR}"
    emake bootstrap || die "Make failed."
}

src_install() {
    cd "${OBJDIR}"
    emake DESTDIR="${D}" install || die "Install failed."

    # Precompile headers
    # FIXME: Should use gcc version from $D instead of old system gcc
    cd "${D}"
    find . -name *.h -exec gcc {} \; || die "Precompiling headers failed."
    find . -name *.hpp -exec gcc {} \; || die "Precompiling headers failed."
}
