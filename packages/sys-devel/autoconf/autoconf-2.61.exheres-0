SUMMARY="Extensible M4 macro package producing configure scripts"
HOMEPAGE="http://www.gnu.org/software/autoconf"
SRC_URI="http://ftp.gnu.org/gnu/${PN}/${P}.tar.gz"

LICENSE="GPL-2"
SLOT="2.5"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="slowtests"

DEPENDENCIES="
    build:
        sys-apps/help2man
    run:
        sys-devel/autoconf-wrapper"

DEFAULT_SRC_CONFIGURE_PARAMS=( --program-suffix="-${PV}" )

src_compile() {
    emake -j1
}

src_test() {
    option slowtests && default "${@}"
}

