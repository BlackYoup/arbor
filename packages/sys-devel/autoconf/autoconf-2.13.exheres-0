require autoconf

SLOT="2.1"
PLATFORMS="~amd64 ~ia64 ~ppc64 ~x86"

src_prepare() {
    # DESTDIR support
    sed -ri 's:(\$\(INSTALL_[^ ]+ [^ ]+ ):\1$(DESTDIR):' Makefile.in
    # Make all needed directories during installation
    sed -ri 's:(^INSTALL.+=.+):\1 -D:' Makefile.in
}

