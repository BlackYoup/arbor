require gnu [ suffix=gz ]

SUMMARY="Tool used for applying patches such as produced by diff"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

DEFAULT_SRC_CONFIGURE_PARAMS=( --hates=docdir )

src_install() {
    dobin patch
    newman patch.man patch.1
    dodoc AUTHORS ChangeLog NEWS README
}

