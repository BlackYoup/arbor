require common-metadata

PLATFORMS="~amd64 ~ppc64 ~x86"
MYOPTIONS="idn ipv6
    ares [[ description = [ Enabled c-ares dns support ] ]]
"
DEPENDENCIES="
    build:
        dev-lang/perl:*
        sys-apps/diffutils
    build+run:
        app-misc/ca-certificates
        dev-libs/openssl
        ares? ( net-dns/c-ares )
        idn? ( net-dns/libidn )
"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILES}"/${PNV}-sydbox.patch )
DEFAULT_SRC_INSTALL_EXTRA_PREFIXES=( docs/ )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( BINDINGS DISTRO FEATURES INTERNALS MANUAL RESOURCES TheArtOfHttpScripting )

src_configure() {
    econf \
        --disable-{gssapi,ldap,sspi} \
        --without-{gnutls,nss,krb4,libssh2,spnego} \
        --enable-{http,ftp,gopher,file,dict,manual,telnet,nonblocking,largefile} \
        --with-ssl --without-ca-bundle --with-ca-path=/etc/ssl/certs \
        $(option_enable ares) \
        $(option_enable ipv6) \
        $(option_with idn libidn)
}

src_test() {
    cat <<-EOF >> tests/data/DISABLED
# Work around broken DNS servers, Exherbo #207
20
507
EOF
    default
}

src_install() {
    default

    insinto /usr/share/aclocal
    doins docs/libcurl/libcurl.m4
}

