require versionator

MY_PV="$(delete_version_separator _ ${PV})"
MY_PNV="${PN}-${MY_PV}"
WORK="${WORKBASE}/${MY_PNV}"

SUMMARY="OpenSSH is a free version of the SSH connectivity tools."
HOMEPAGE="http://openssh.org"
DOWNLOADS="ftp://ftp.openbsd.org/pub/OpenBSD/OpenSSH/portable/${MY_PNV}.tar.gz"

LICENCES="BSD"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS="pam skey tcp-wrappers ssl-engine"

DEPENDENCIES="
    build:
        >=dev-libs/openssl-0.9.6
        pam? ( sys-libs/pam )
    run:
        pam? ( sys-libs/pam )
        tcp-wrappers? ( sys-apps/tcp-wrappers )"

DEFAULT_SRC_CONFIGURE_PARAMS=( '--with-md5-passwords' '--sysconfdir=/etc/ssh'
'--disable-strip' )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( pam skey tcp-wrappers ssl-engine )

src_install() {
    default
    rmdir "${IMAGE}"/var{/empty,}
}

pkg_postinst() {
    [[ ! -d "${ROOT}/var/empty" ]] && mkdir "${ROOT}/var/empty"
}
