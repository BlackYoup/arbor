SUMMARY="Filesystem utilities for use with ext2 and ext3 filesystems"
HOMEPAGE="http://e2fsprogs.sourceforge.net"
DOWNLOADS="mirror://sourceforge/e2fsprogs/e2fsprogs-${PV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES="build:
                sys-libs/com_err
                sys-libs/ss
              run:
                sys-libs/com_err
                sys-libs/ss"

WORK="${WORKBASE}/e2fsprogs-${PV}"

src_compile() {
    cd "${WORK}"
    sed -i -e 's:^\(LIB_SUBDIRS=\)lib/et lib/ss:\1:' Makefile.in
    mkdir build
    cd build
    ../configure --enable-elf-shlibs || die "configure failed"

    # Remove ss and com_err libs as they're is split out
    rm lib/{et,ss}/*
    ln -s /usr/include/ss/ss_err.h lib/ss/ss_err.h
    ln -s /usr/lib/libcom_err.a lib/libcom_err.a
    ln -s /usr/lib/libcom_err.so lib/libcom_err.so
    ln -s /usr/lib/libss.so lib/libss.so

    emake \
        COMPILE_ET=compile_et \
        MK_CMDS=/usr/bin/mk_cmds
}

src_test() {
    cd "${WORK}/build"
    emake -j1 \
        IMAGE="" \
        RM=/bin/rm \
        LN=/bin/ln \
        check
}

DEFAULT_SRC_INSTALL_PARAMS=( -C build )
