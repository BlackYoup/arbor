[Unit]
Description=Logical Volume Manager
DefaultDependencies=no
Before=fsck.target
Before=basic.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/sbin/pvscan --quiet --config 'global { locking_dir = "/dev/.lvm" }'
ExecStartPre=/sbin/vgscan --quiet --mknodes --config 'global { locking_dir = "/dev/.lvm" }'
ExecStart=/sbin/vgchange --quiet --config 'global { locking_dir = "/dev/.lvm" }' -a y
ExecStop=-/sbin/lvchange --quiet --config 'global { locking_dir = "/dev/.lvm" }' -a n /dev/mapper/*
ExecStop=-/sbin/vgchange --quiet --config 'global { locking_dir = "/dev/.lvm" }' -a n

[Install]
WantedBy=basic.target
