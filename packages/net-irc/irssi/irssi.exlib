SUMMARY="Irssi is a terminal based IRC client for UNIX systems"
HOMEPAGE="http://www.irssi.org/"
DOWNLOADS="http://www.irssi.org/files/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
MYOPTIONS="bot ipv6 perl proxy socks ssl"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-libs/glib:2[>=2.6.0]
        sys-libs/ncurses
        perl? ( dev-lang/perl:= )
        socks? ( net-proxy/dante )
        ssl? ( dev-libs/openssl )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( ipv6 ssl )
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=( bot perl proxy socks )
DEFAULT_SRC_CONFIGURE_PARAMS=( --with-ncurses --with-perl-lib=vendor )
DEFAULT_SRC_INSTALL_PARAMS=( docdir=/usr/share/doc/${PNVR}/ )

src_install() {
    default
    edo find "${IMAGE}" -type d -empty -delete
}

