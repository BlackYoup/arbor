require gnome.org

SUMMARY="A low-level configuration system"
HOMEPAGE="http://live.gnome.org/dconf"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~ppc64"
MYOPTIONS="doc
editor [[ description = [ build dconf-editor ] ]]
gobject-introspection"

DEPENDENCIES="
    build:
        dev-lang/vala[>=0.9.5]
        dev-util/pkg-config[>=0.21]
        doc? ( dev-doc/gtk-doc[>=1.15] )
        gobject-introspection? ( gnome-desktop/gobject-introspection[>=0.9.5] )
    build+run:
        dev-libs/glib[>=2.25.16]
        editor? ( x11-libs/gtk+:2[>=2.0]
                  dev-libs/libxml2:2.0 )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'editor' 'gobject-introspection introspection' )

