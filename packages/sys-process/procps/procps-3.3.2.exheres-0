require debian-upstream [ suffix=.orig.tar.gz ]

SUMMARY="Utilities for process information including ps, top and kill"
HOMEPAGE="http://gitorious.org/${PN}"

LICENCES="GPL-2 LGPL-2"
SLOT="0"
PLATFORMS="~amd64 ~arm ~ia64 ~ppc64 ~x86"
MYOPTIONS=""

# Need root
RESTRICT="test"

DEPENDENCIES="
    build+run:
        sys-libs/ncurses
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-nls
    --disable-kill
)

WORK="${WORKBASE}/${PN}-ng-${PV}"

src_install() {
    default

    edo mv "${IMAGE}"/usr/usr/bin/* "${IMAGE}"/usr/bin/

    # Provided by sys-apps/coreutils
    edo rm "${IMAGE}"/usr/bin/uptime
    edo rm "${IMAGE}"/usr/share/man/man1/uptime.1

    # Provided by sys-apps/skeleton-filesystem-layout
    edo rm "${IMAGE}"/etc/sysctl.conf

    edo find "${IMAGE}"/ -type d -empty -delete
}

