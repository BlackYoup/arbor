require toolchain-funcs

MY_P="${P/-/_}"

DESCRIPTION="List open files for running UNIX processes"
HOMEPAGE="ftp://lsof.itap.purdue.edu/pub/tools/unix/lsof/"
SRC_URI="ftp://lsof.itap.purdue.edu/pub/tools/unix/${PN}/${MY_P}.tar.bz2
    http://dev.exherbo.org/~philantrop/distfiles/${MY_P}.tar.bz2"

LICENSE="lsof"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPENDENCIES=""

S="${WORKDIR}/${MY_P}_src"

DEFAULT_SRC_PREPARE_PATCHES=( "${FILESDIR}"/${P}.patch )

src_unpack() {
    unpack ${A}
    unpack ./${MY_P}/${MY_P}_src.tar
}

src_compile() {
    LSOF_CC=$(tc-getCC) ./Configure -n linux || die "Configure failed."
    emake DEBUG="" || die "Emake failed."
}

src_test() {
    cd tests

    default
}

src_install() {
    dobin lsof || die "dobin failed."
    dolib lib/liblsof.a || die "dolib failed."
    doman lsof.8 || die "doman failed."
    dodoc 00* || die "dodoc failed."

    insinto /usr/share/${PN}/scripts
    doins scripts/* || die "doins failed."
}

