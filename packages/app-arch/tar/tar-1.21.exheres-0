SUPPORTED_AUTOCONF=( 2.5 )
SUPPORTED_AUTOMAKE=( none )
require autotools

SUMMARY="Tar archiver"
HOMEPAGE="http://www.gnu.org/software/tar/"
DOWNLOADS="mirror://gnu/${PN}/${PNV}.tar.bz2"

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~ppc64 ~x86"
MYOPTIONS="nls"

DEPENDENCIES=""

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/tar-1.21-fix-testsuite.patch
)

src_prepare() {
    default
    cd tests
    eautotest
}

DEFAULT_SRC_CONFIGURE_PARAMS=( --bindir=/bin )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( nls )
DEFAULT_SRC_INSTALL_EXTRA_DOCS=( PORTS )

src_install() {
    default
    rmdir "${IMAGE}"/usr/sbin || die "rmdir failed"
}

