require versionator

MY_PV="$(delete_all_version_separators ${PV})"

DESCRIPTION="Zip is a compression and file packaging/archive utility."
HOMEPAGE="http://www.info-zip.org/Zip.html"
# ftp://ftp.info-zip.org/ has been dead since July. ftp.tex.ac.uk works.
#SRC_URI="ftp://ftp.info-zip.org/pub/infozip/src/zip${MY_PV}.tar.gz"
SRC_URI="ftp://ftp.tex.ac.uk/tex-archive/tools/zip/info-zip/src/zip${MY_PV}.tar.gz"

LICENSE="Info-ZIP"
SLOT="0"
PLATFORMS="~amd64 ~ia64 ~x86"
MYOPTIONS=""

DEPEND=""
RDEPEND=""

src_compile() {
    emake -f unix/Makefile generic
}

src_install() {
    make prefix="${D}/usr" -f unix/Makefile install || die "Install failed."
}
